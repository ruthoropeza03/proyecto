---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Counter from '../components/Counter.astro';

let nombre = "Mundo";
let visitas = 1000;
---

<Layout title="Inicio">

  <main class="container">
    <div class="row justify-content-center">
      <div class="col-ms-12 col-md-8 col-lg-6 text-center">

        <!-- Saludo -->
        <section class="mb-4">
          <h1 class="display-4 color-text">Hola, {nombre}!</h1>
          <p class="lead">Bienvenido a mi sitio Astro desplegado en Vercel</p>
        </section>

        <!-- Visitas -->
        <div class="mb-4">
          <p class="fs-5">Visitas totales: {visitas.toLocaleString()}</p>
        </div>

        <!-- Componente Counter -->
        <Counter />

        <!-- Características de Astro -->
        <section class="mb-4 text-start">
          <h2 class="mb-3">Características de Astro</h2>
          <ul class="list-unstyled">
            <li class="mb-2">
              <i class="bi bi-lightning-fill text-primary me-2"></i>Rápido
            </li>
            <li class="mb-2">
              <i class="bi bi-stars text-primary me-2"></i>Moderno
            </li>
            <li>
              <i class="bi bi-hand-thumbs-up text-primary me-2"></i>Fácil de usar
            </li>
          </ul>
        </section>

        <!-- Botón de base de datos -->
        <button
          onclick="window.location.href='/test-db'"
          class="btn btn-primary btn-lg"
        >
          <i class="bi bi-database me-2"></i>Probar conexión a la base de datos
        </button>

      </div>
    </div>
  </main>

</Layout>

