---
// Frontmatter (JavaScript que se ejecuta en el servidor)
import Header from '../components/Header.astro';
import Counter from '../components/Counter.astro';
import '../styles/global.css';
const nombre = "Mundo";  // Definimos la variable nombre
const visitas = 1000;    // Definimos la variable visitas
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!-- Tu CSS personalizado -->

</head>
<body>
    <div class="container my-5">
        <Header />

        <!-- Sección principal con texto centrado -->
        <section class="text-center mb-4">
            <h1 class="display-4">Hola, {nombre}!</h1>
            <p class="lead">Bienvenido a mi sitio Astro desplegado en Vercel</p>
        </section>

        <!-- Contador de visitas -->
        <div class="mb-4">
            <p class="fs-5">Visitas totales: {visitas.toLocaleString()}</p>
        </div>

        <!-- Componente Counter -->
        <Counter />

        <!-- Características -->
        <section class="mb-4">
            <h2 class="mb-3">Características de Astro</h2>
            <ul class="list-unstyled">
                <li class="mb-2"><i class="bi bi-lightning-fill text-primary me-2"></i>Rápido</li>
                <li class="mb-2"><i class="bi bi-stars text-primary me-2"></i>Moderno</li>
                <li><i class="bi bi-hand-thumbs-up text-primary me-2"></i>Fácil de usar</li>
            </ul>
        </section>

        <!-- Botón con estilos de Bootstrap -->
        <div class="text-center mt-4">
            <button onclick="window.location.href='/test-db'" class="btn btn-primary btn-lg">
                <i class="bi bi-database me-2"></i>Probar conexión a la base de datos
            </button>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>